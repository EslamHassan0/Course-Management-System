@model CourseManagementSystem.Application.DTO.CourseDto

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-book-open"></i> @Model.Title</h3>
        </div>
        <div class="card-body">
            <p class="mb-3">
                <strong><i class="fas fa-align-left"></i> Description:</strong>
                <span class="text-muted">@Model.Description</span>
            </p>
            <p>
                <strong><i class="fas fa-users"></i> Maximum Capacity:</strong>
                <span class="badge bg-secondary">@Model.MaximumCapacity</span>
            </p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>
    </div>
</div>
 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
