@model CourseManagementSystem.Application.DTO.StudentDto

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Full Name</label>
        <input type="text" asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Birthdate</label>
        <input type="date" asp-for="Birthdate" class="form-control" required />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>National ID</label>
        <input type="text" asp-for="NationalIDNo" class="form-control" required maxlength="14" />
        <span asp-validation-for="NationalIDNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" maxlength="11" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
