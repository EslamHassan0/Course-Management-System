@model CourseManagementSystem.Application.DTO.StudentDto

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Student Details</h3>
                </div>

                <div class="card-body">
                    <h4 class="text-center text-primary fw-bold">@Model.FullName</h4>
                    <hr />

                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th scope="row"><i class="bi bi-envelope-fill"></i> Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="bi bi-calendar-date-fill"></i> Birthdate</th>
                                <td>@Model.Birthdate.ToShortDateString()</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="bi bi-card-text"></i> National ID</th>
                                <td>@Model.NationalIDNo</td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="bi bi-telephone-fill"></i> Phone Number</th>
                                <td>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}
