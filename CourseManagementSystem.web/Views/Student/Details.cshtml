@model CourseManagementSystem.Application.DTO.StudentDto

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FullName</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Birthdate:</strong> @Model.Birthdate.ToShortDateString()</p>
        <p><strong>National ID:</strong> @Model.NationalIDNo</p>
        <p><strong>Phone Number:</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</p>
    </div>
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to List</a>
<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning mt-3">Edit</a>
